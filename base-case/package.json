{
  "name": "base-case",
  "displayName": "Base Case",
  "version": "0.1.10",
  "description": "A content distribution tool that allows you to write content once and publish it to multiple platforms simultaneously. It features a rich editor with Markdown support, platform management, and distribution tracking",
  "author": "@esx",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "verbose": "plasmo --verbose"
  },
  "dependencies": {
    "next": "15.1.6",
    "plasmo": "0.90.5",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@types/chrome": "0.0.304",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "@plasmohq/storage": "1.15.0",
    "@plasmohq/rps": "1.8.7"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs"
    ]
  }
}
